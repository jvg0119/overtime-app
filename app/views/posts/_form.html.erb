<div class="container">

	<div class="form-horizontal" role="form">
		
	  	<%= form_for(@post) do |f| %>
	  		<!-- moved to partial _errors -->
	  		<%# if @post.errors.any? %>
	  			<%#= @post.errors.inspect %>
	  			<%#= @post.errors.full_messages %>
	  			<%# @post.errors.full_messages.each do |msg| %>
	  				<%#= flash[:error] = msg %>
					<%#= js add_gritter(msg, title: "Overtime App Notification", sticky: false) %>
	  			<%# end %>
	  		<%# end %>

	  		<%= render partial: 'shared/errors', locals: { object: @post } %>

		    <div class="form-group">
				<%= f.label :date, "Date:", class: "control-label, col-sm-1" %>
				<%= f.date_field :date, class: "form-control, col-sm-6", autofocus: true %>
		    </div>

		    <div class="form-group">
				<%= f.label :rational, "Rationale: ", class: "control-label, col-sm-1" %>
		    	<%= f.text_area :rational, class: "form-control, col-sm-6", rows: 4, placeholder: "Enter rationale" %>
		    </div>

		    <div class="form-group">
				<%= f.label :overtime_request, "Overtime Request: ", class: "control-label, col-sm-1" %>
		    	<%= f.number_field :overtime_request, step: 0.25, class: "form-control, col-sm-6", rows: 4, placeholder: "Enter rationale" %>
		    </div>

		    <%#  current_user_admin?(current_user) %>
		    <%# if current_user.type == "AdminUser" %>
		    <% if admin? %>
		    <div class="form-group">
			    <div class="col-sm-offset-1">	
		    		<%= f.radio_button :status, "submitted" %>	
			    	<%= f.label :status, "Submitted" %>

			    	<%= f.radio_button :status, "approved" %>
			    	<%= f.label :status, "Approved" %>

		    		<%= f.radio_button :status, "rejected" %>	
		    		<%= f.label :status, "Rejected" %>		
			    </div>
			</div>
			<% end %>

		    <div class="form-group">
			    <div class="col-sm-offset-1">	
			    	<%= f.submit class: "btn btn-default" %>
			    	<%#= f.submit format_post(@post), class: "btn btn-default" %>
			   	</div>
		    </div>
	    <% end %>	
	
	</div>
</div>









